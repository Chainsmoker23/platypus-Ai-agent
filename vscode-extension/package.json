{
  "name": "platypus-vscode",
  "displayName": "Platypus",
  "description": "Your Intelligent Coding Companion",
  "version": "0.0.1",
  "publisher": "platypus-ai",
  "icon": "assets/platypus-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:platypus.generateProject",
    "onView:platypus.sidebarView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "platypus.generateProject",
        "title": "Platypus: Generate Project"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "platypus",
          "title": "Platypus",
          "icon": "assets/platypus-icon.svg"
        }
      ]
    },
    "views": {
      "platypus": [
        {
          "id": "platypus.sidebarView",
          "name": "Platypus Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build --prefix webview-ui && tsc -p ./",
    "watch": "npm-run-all --parallel watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "npm run dev --prefix webview-ui",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
